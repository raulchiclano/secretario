      <field name="view_mode">kanban,tree,form</field>
      <field name="help" type="html">
        <p class="oe_view_nocontent_create">
          Grupos de Servicio        
        </p>
        <p>
          Click en 'Nuevo' para crear un nuevo grupo de servicio
        </p>

      </field>
